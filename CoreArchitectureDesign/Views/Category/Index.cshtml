@model Result<IEnumerable<Categories>>

@{
    ViewData["Title"] = "Index";
}

@using CoreArchitectureDesign.Core.Common
@using CoreArchitectureDesign.Entities

<h2>Categories</h2>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user"></i>Table
                </div>
                <div class="actions">
                    <a href="/Category/Create" class="btn btn-default btn-sm">
                        <i class="fa fa-pencil"></i> Add
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                CategoryId
                            </th>
                            <th>
                                CategoryName
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                UsedTime
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ResultObject)
                        {
                        <tr>
                            <td>@item.CategoryId </td>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                            <td>@item.UsedTime</td>
                            <td>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-default btn-sm"><i class="fa fa-pencil"></i> Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-default btn-sm"><i class="fa icon-trash"></i> Delete</a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
